extends ../layout

block content
    if products.length != 0
        .row
            .col-sm-8
                h1= title
            .col-sm-4
                a(href="course/add", class ="btn btn-success float-left") Add New Product
        table.table
            thead
                tr
                    th Course Name
                    th Course ID
                    th Course Duration(Hrs)
                    th Course Fee(USD)
                    th Actions
            tbody 
                each course in courses
                    tr
                        console.log()
                        td=product.name
                        td=product.price     
                        td
                            a(href="/course/delete/"+product._id, class="btn btn-danger") Delete
                            <br><br>
                            a(href="/course/edit/"+product._id, class="btn btn-warning") Edit
                            
    else
        h3 There are no products in the db